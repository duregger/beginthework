rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Allow public read access to podcast episodes
    match /podcast-episodes/{document} {
      allow read: if true;
      allow write: if request.auth != null && 
        request.auth.token.email.matches('.*@beginthework\\.com$');
    }
    
    // Deny all other collections
    match /{document=**} {
      allow read, write: if false;
    }
  }
}